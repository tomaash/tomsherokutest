<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th>Born</th>
    <th>Note</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.surname %></td>
    <td><%=h user.born %></td>
    <td><%=h user.note %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>